<%- include('../partials/header') %>


<form class="col s12" action="/symposia/<%= symposium._id%>/descriptions" method="POST">
  <input name="description">
  <button type="submit">Add Symposium</button>
</form>

<% if (symposium.descriptions.length) { %>
  <table>
   <tbody>

      <tr>
          <td><%= symposium.descriptions[0].description %></td>
      </tr>

    </tbody>
  </table>

<% } else { %>
  <h5>No Symposium Yet</h5>
<% } %>


<br><br><h3>Comments</h3>
<div class="row">
    <form class="col s12" action="/symposia/<%= symposium._id%>/comments" method="POST">
      <div class="row">
        <div class="input-field col s12">
          <textarea name="content" id="textarea1" class="materialize-textarea"></textarea>
          <label for="textarea1">Make a comment ;)</label>
        </div>
      </div>
      <input id="cmntBtn" type="submit" value="Add Comment">
    </form>
</div>


  <% if (symposium.comments.length) { %>
    <table>
        <thead>
           <tr>
             <th>Date</th>
             <th>Comment</th>
           </tr>
        <thead>
        <tbody>
        <% symposium.comments.forEach( (c) => { %>

        <tr>
            <td><%= c.createdAt.toLocaleDateString() %></td>
            <td><%= c.content %></td>
        </tr>
        
        <% }); %>
      </tbody>
    </table>

  <% } else { %>
    <h5>No Comments Yet</h5>
  <% } %>

<%- include('../partials/footer') %>